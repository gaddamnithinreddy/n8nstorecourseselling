rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isSignedIn() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Users collection
    match /users/{userId} {
      // Users can read their own data
      allow read: if isSignedIn() && request.auth.uid == userId;
      // Admins can read all users
      allow read: if isAdmin();
      // Users can create their own document on signup
      allow create: if isSignedIn() && request.auth.uid == userId;
      // Users can update their own data
      allow update: if isSignedIn() && request.auth.uid == userId;
      // Only admins can delete users
      allow delete: if isAdmin();
    }
    
    // Templates collection
    match /templates/{templateId} {
      // Anyone can read published templates
      allow read: if true;
      // Only admins can create, update, or delete templates
      allow write: if isAdmin();
    }
    
    // Orders collection
    match /orders/{orderId} {
      // Users can read their own orders
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      // Admins can read all orders
      allow read: if isAdmin();
      // Users can create orders (during checkout)
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Only system/admins can update orders (payment status, etc.)
      allow update: if isAdmin();
      // Only admins can delete orders
      allow delete: if isAdmin();
    }
    
    // Download tokens collection
    match /downloadTokens/{tokenId} {
      // Users can read their own tokens
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      // Admins can read all tokens
      allow read: if isAdmin();
      // Only system can create tokens (server-side)
      allow create: if false;
      // No one can update tokens
      allow update: if false;
      // Only admins can delete tokens
      allow delete: if isAdmin();
    }
    
    // Coupons collection
    match /coupons/{couponId} {
      // Anyone can read active coupons (for validation)
      allow read: if true;
      // Only admins can create, update, or delete coupons
      allow write: if isAdmin();
    }
    
    // Settings collection (site-wide settings)
    match /settings/{settingId} {
      // Anyone can read settings (for public site config)
      allow read: if true;
      // Only admins can write settings
      allow write: if isAdmin();
    }
    
    // Audit logs collection (admin actions)
    match /auditLogs/{logId} {
      // Only admins can read audit logs
      allow read: if isAdmin();
      // Only server-side can write audit logs (no client writes)
      allow write: if false;
    }
    
    // Security events collection
    match /securityEvents/{eventId} {
      // Only admins can read security events
      allow read: if isAdmin();
      // Only server-side can write security events (no client writes)
      allow write: if false;
    }

    // Contact messages collection
    match /messages/{messageId} {
      // Admins can read (dashboard) and update (status) messages
      allow read, update, delete: if isAdmin();
      // Creation is handled via API (Admin SDK) so no client-side create allowed
      allow create: if false;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
